<li id="<%= feed_item.id %>">
<%= link_to feed_item.author.username, feed_item.author %>

<span class="content"><%= feed_item.status %></span>
<span class="timestamp">Posted <%= time_ago_in_words(feed_item.created_at) %> ago.</span>
<% if current_author?(feed_item.author) %>
<%= link_to "delete", feed_item, method: :delete, data: {confirm:"You sure?"}, title: feed_item.status %>.
<% end %>
</li>